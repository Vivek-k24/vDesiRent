                <EditText ns0:id="@+id/passwordSignInInput" ns0:layout_width="match_parent" ns0:layout_height="wrap_content" ns0:layout_marginTop="8dp" ns0:hint="Password" ns0:inputType="textPassword" ns0:contentDescription="Password input field" />
            </com.google.android.gms.common.SignInButton>


