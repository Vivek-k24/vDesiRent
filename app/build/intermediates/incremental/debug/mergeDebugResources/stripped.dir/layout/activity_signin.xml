            <com.google.android.gms.common.SignInButton ns0:id="@+id/googleSignInButton" ns0:layout_width="wrap_content" ns0:layout_height="wrap_content" ns0:layout_gravity="center_horizontal" ns0:layout_marginTop="32dp" />


            <com.facebook.login.widget.LoginButton ns0:id="@+id/facebookSignInButton" ns0:layout_width="wrap_content" ns0:layout_height="wrap_content" ns0:layout_gravity="center_horizontal" ns0:layout_marginTop="32dp" />


        </LinearLayout>
    </ScrollView>
